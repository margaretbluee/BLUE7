<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ED786D60"
    android:orientation="vertical"
    tools:context=".ItemsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@color/tanAccent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ItemsEditTextid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ItemsEditTextname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ItemsEditTextcount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ItemsEditTextprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ItemsEditTextfpa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ItemsEditTextcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:inputType="textCapCharacters"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="Κόστος Αγοράς"
            android:textColor="#0C0909"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.911" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="29dp"
            android:layout_height="36dp"
            android:text="€"
            android:textColor="#0C0909"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.66"
            app:layout_constraintStart_toEndOf="@+id/ItemsEditTextcoun"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.94" />

        <EditText
            android:id="@+id/ItemsEditTextpric"
            style="@android:style/Widget.Material.EditText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="186"

            android:inputType="number"
            android:maxLength="10"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textColorHint="#AEA1A1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.43"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ItemsEditTextid"
            app:layout_constraintVertical_bias="0.918" />

        <Spinner
            android:id="@+id/spinnerCatego"
            android:layout_width="169dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/spin"
            android:entries="@array/items_category"
            android:minHeight="48dp"

            android:radius="15dp"

            android:spinnerMode="dialog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.083"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ItemsEditTextid"
            app:layout_constraintVertical_bias="0.29"
            tools:textAlignment="center" />

        <EditText
            android:id="@+id/ItemsEditTextcategor"
            style="@android:style/Widget.Material.EditText"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:layout_margin="10sp"
            android:layout_marginBottom="24dp"
            android:hint="ΜΕΤΑΦΟΡΙΚΑ"
            android:inputType="textCapCharacters"
            android:maxLength="10"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textColorHint="#AEA1A1"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.396"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ItemsEditTextid"
            app:layout_constraintVertical_bias="0.08" />

        <EditText
            android:id="@+id/ItemsEditTextnam"
            style="@android:style/Widget.Material.EditText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="10sp"
            android:layout_marginTop="8dp"
            android:hint="Ποδήλατο"
            android:inputType="textCapCharacters"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textColorHint="#AEA1A1"
            app:layout_constraintBottom_toTopOf="@+id/ItemsEditTextid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.892"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="serif-monospace"
            android:text="Προϊόν"
            android:textColor="#0C0909"
            app:layout_constraintBottom_toTopOf="@+id/ItemsEditTextid"
            app:layout_constraintEnd_toStartOf="@+id/ItemsEditTextnam"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toEndOf="@+id/textViewδδδ"
            app:layout_constraintTop_toBottomOf="@+id/ItemsEditTextname"
            app:layout_constraintVertical_bias="0.454" />

        <TextView
            android:id="@+id/textViewδδδ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="serif-monospace"
            android:text="Κωδικός "
            android:textColor="#0C0909"
            app:layout_constraintBottom_toTopOf="@+id/ItemsEditTextid"
            app:layout_constraintEnd_toStartOf="@+id/ItemsEditTexti"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.457" />

        <EditText
            android:id="@+id/ItemsEditTexti"

            style="@android:style/Widget.Material.EditText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:hint="1"
            android:inputType="textCapCharacters"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textColorHint="#AEA1A1"
            app:layout_constraintBottom_toTopOf="@+id/ItemsEditTextid"
            app:layout_constraintEnd_toStartOf="@+id/ItemsEditTextnam"
            app:layout_constraintHorizontal_bias="0.446"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="228dp"
            android:fontFamily="serif-monospace"
            android:text="Aπόθεμα "
            android:textColor="#0C0909"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ItemsEditTextcoun"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ItemsEditTextid"
            app:layout_constraintVertical_bias="0.847" />

        <TextView
            android:id="@+id/ItemsEditTextcoun"
            style="@android:style/Widget.Material.EditText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:clickable="false"
            android:maxLength="4"
            android:minHeight="48dp"
            android:text="0"
            android:textColor="#80615C5C"
            android:textColorHint="#AEA1A1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.863"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.96" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="serif-monospace"
            android:text="Φ.Π.Α. "
            android:textColor="#0C0909"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.189"
            app:layout_constraintStart_toEndOf="@+id/ItemsEditTextcategor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.573" />

        <EditText
            android:id="@+id/ItemsEditTextfp"
            style="@android:style/Widget.Material.EditText"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_marginStart="7dp"
            android:gravity="center"
            android:hint="24"
            android:inputType="number"

            android:maxLength="10"
            android:textColor="@color/black"
            android:textColorHint="#AEA1A1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.11"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="%"
            android:textColor="#0C0909"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.537"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/ItemsEditTextid"
            app:layout_constraintVertical_bias="0.204" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/bn_insertItems"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:layout_marginStart="30dp"

        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/tanAccent"
        android:text="ΕΙΣΑΓΩΓΗ"
        android:textColor="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemsListId"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</androidx.appcompat.widget.LinearLayoutCompat>
